@page
@model WebApp.Pages.Students.RegistrationModel

@{
    ViewData["Title"] = "Registration";
}

<h2>Registration</h2>
<hr />
<div>
    <h4>Student</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Document)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Document)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
    </dl>
    <br />
    <h4>Registered Subjects</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RegisteredSubjects[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegisteredSubjects[0].Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegisteredSubjects[0].Credits)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RegisteredSubjects)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Credits)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (!string.IsNullOrEmpty(Model.WarningMessage))
    {
        <div class="alert alert-warning">@Model.WarningMessage</div>
    }
</div>
<hr /> <br />
<h4>Register New Subject</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <dt class="col-sm-2">
                    <label asp-for="SelectedSubjectId" class="control-label">Subjects</label>
                </dt>
                <dd class="col-sm-10">
                    <select asp-for="SelectedSubjectId" asp-items="Model.AvailableSubjects" class="form-control"></select>
                </dd>
            </div>
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-page="./Index">Back to List</a>
</div>
